# file: examples/multi-node/terraform.tfvars.example
# purpose: Example inputs for the multi-node SDN example

# Proxmox API configuration
proxmox_url      = "https://<PROXMOX-IP>:8006/api2/json"
proxmox_token    = "root@pam!terraform=<YOUR-API-TOKEN-SECRET>"
proxmox_insecure = true

# Node 1 configuration
proxmox_node1      = "<NODE1-NAME>"  # e.g. "pve-node1"
proxmox_host_node1 = "<NODE1-IP>"    # e.g. "192.168.1.10"

